#!/usr/bin/env bash
set -e

thisfile=$( readlink "${BASH_SOURCE[0]}" ) || thisfile="${BASH_SOURCE[0]}"
MDC_BASEDIR="$( cd "$( dirname "$thisfile" )/../" && pwd -P )"
export MDC_BASEDIR="${MDC_BASEDIR}"

if [ -z "$1" ];
then
    echo "Backup name is required"
    exit 1
fi

$MDC_BASEDIR/bin/mdc exec webserver bash --login /root/restore.sh $1
$MDC_BASEDIR/bin/mdc exec db bash mdc_db_restore.sh $1
