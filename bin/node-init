#!/usr/bin/env bash
set -e

thisfile=$( readlink "${BASH_SOURCE[0]}" ) || thisfile="${BASH_SOURCE[0]}"
MDC_BASEDIR="$( cd "$( dirname "$thisfile" )/../" && pwd -P )"
export MDC_BASEDIR="${MDC_BASEDIR}"

$MDC_BASEDIR/bin/mdc exec webserver bash --login /root/nvm_install.sh
$MDC_BASEDIR/bin/mdc exec webserver bash --login /root/npm_install.sh
